<h1>Listing references</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% @references.each do |reference| %>
  <tr>
    <td><%=h reference.name %></td>
    <td><%=h reference.description %></td>
    <td><%= link_to 'Show', reference %></td>
    <td><%= link_to 'Edit', edit_reference_path(reference) %></td>
    <td><%= link_to 'Destroy', reference, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New reference', new_reference_path %>